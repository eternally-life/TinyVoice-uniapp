{
	/* 全局按需引入组件 */
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
		"^guet-(.*)": "@/components/guet-plug/guet-$1.vue"
	},
	/* 主包  仅存放tabbar页面*/
	"pages": [{
		"path": "pages/index/index",
		"style": {
			"navigationBarTitleText": "uni-app"
		}
	}, {
		"path": "pages/tab2/tab2",
		"style": {
			"navigationBarTitleText": "",
			"enablePullDownRefresh": false
		}

	}, {
		"path": "pages/tab3/tab3",
		"style": {
			"navigationBarTitleText": "",
			"enablePullDownRefresh": false
		}

	}, {
		"path": "pages/user/user",
		"style": {
			"navigationBarTitleText": "",
			"enablePullDownRefresh": false
		}

	}],
	/* 基础分包 */
	"subPackages": [{
		"root": "subpages",
		"pages": [{
			"path": "example/example",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}]
	}],
	/* 教务相关分包 */
	"subpages_edu": [{
		"root": "subpages_edu",
		"pages": [{
				"path": "final_exam/final_exam",
				"style": {
					"navigationBarTitleText": "查看 期末成绩",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "selected_courses/selected_courses",
				"style": {
					"navigationBarTitleText": "查询 已选课程",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "credit/credit",
				"style": {
					"navigationBarTitleText": "查询 学分",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "english/english",
				"style": {
					"navigationBarTitleText": "英语均分",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "gpa/gpa",
				"style": {
					"navigationBarTitleText": "查询 学分绩",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "help_setting/help_setting",
				"style": {
					"navigationBarTitleText": "Q&A、相关设置",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "test_physical/test_physical",
				"style": {
					"navigationBarTitleText": "体测成绩自助计算",
					"enablePullDownRefresh": false
				}
			},
			{
				"path": "substitute_query_menu/substitute_query_menu",
				"style": {
					"navigationBarTitleText": "代 查 菜 单",
					"enablePullDownRefresh": false
				}
			}
		]
	}],
	// 全局样式
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {},
	/* tabbar 样式控制 */
	"tabBar": {
		"color": "#000000",
		"selectedColor": "#2dc1cf",
		"backgroundColor": "#FFFFFF",
		"list": [{
				"pagePath": "pages/index/index",
				"text": "学习",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"pagePath": "pages/tab2/tab2",
				"text": "商城",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"pagePath": "pages/tab3/tab3",
				"text": "微音",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			},
			{
				"pagePath": "pages/user/user",
				"text": "我的",
				"iconPath": "static/logo.png",
				"selectedIconPath": "static/logo.png"
			}
		]
	}
}
